{
  "description": "Add small indicator to stock list in tradingview(MY)",
  "manifest_version": 2,
  "name": "tradingview-syariah-indicator",
  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/apply-css",
  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "background/script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.tradingview.com/chart/*"
      ],
      "js": [
        "pages/chart.js"
      ]
    },
    {
      "matches": [
        "*://*.tradingview.com/screener/*"
      ],
      "js": [
        "pages/screener.js"
      ]
    },
    {
      "matches": [
        "*://*.tradingview.com/symbols/*"
      ],
      "js": [
        "pages/symbols.js"
      ]
    }
  ],
  "page_action": {
    "default_icon": "icons/off.svg",
    "browser_style": true
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
